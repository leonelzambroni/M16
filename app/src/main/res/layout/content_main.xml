<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    style="?android:attr/buttonBarStyle"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorM16"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">
        <!-- #4674B7 -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebookm16blanco2"
            android:layout_gravity="center"
            android:id="@+id/toolbar_logo"
            android:contentDescription="@string/content_description_logo_M16"/>


    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingBottom="30dp">

        <pl.droidsonroids.gif.GifImageView
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnBeneficios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:src="@drawable/beneficiosff"
            />
        <pl.droidsonroids.gif.GifImageView
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnServicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_gravity="center"
            android:src="@drawable/serviciosf"

            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">
        <pl.droidsonroids.gif.GifImageView
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnCredencial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:src="@drawable/credencialf"
            />
        <pl.droidsonroids.gif.GifImageView
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_gravity="center"
            android:src="@drawable/radiof"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <pl.droidsonroids.gif.GifImageView
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnCursos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:src="@drawable/cursosf"
            />

        <pl.droidsonroids.gif.GifImageView
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btnContactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_gravity="center"
            android:src="@drawable/contactanosf"
            />


    </LinearLayout>


</LinearLayout>
